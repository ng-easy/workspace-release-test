{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "lib": ["es2018", "dom"],
    "paths": {
      "test1": ["dist/test1"],
      "test2": ["dist/test2"]
    }
  },
  "angularCompilerOptions": {
    "strict": true,
    "fullTemplateTypeCheck": true
  }
}
